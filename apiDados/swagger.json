            },
            "nome": {
              "type": "string"
            },
            "escola": {
              "type": "string"
            },
            "email":{
              "type":"string"
            },
            "confirmacao":{
              "type":"integer"
            },
            "premium":{
              "type":"integer"
            },
            "validade":{
