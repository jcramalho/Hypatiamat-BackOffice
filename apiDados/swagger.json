                "type": "string"
              },
              "datanascimento": {
                "type": "string"
              },
              "escola": {
                "type": "string"
              },
              "turma":{
                "type": "string"
              },
              "email":{
                "type":"string"
              },
              "confirmacao":{
                "type":"integer"
              }
            }
        },
        "Professor":{
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "codigo": {
